    android:layout_width="match_parent"
    android:layout_height="45dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp">
        <FrameLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
