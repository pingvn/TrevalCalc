<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/treval"
    tools:context=".Fragments.AddTrevalFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/Name_Fragment_Add_Treval"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/text_Treval_Name" />

    <EditText
        android:id="@+id/id_edittext_treval_create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/text_Treval_Name_Select_Direcion"
        android:textSize="18sp" />

    <!-- <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_margin="10dp"> -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/id_spener_direction_treval"
            android:layout_width="200dp"
            android:layout_height="25dp"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_OR" />

        <Button
            android:id="@+id/id_create_button_derection_text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/newbutton"
            android:text="@string/button_create" />

        <TextView
            android:id="@+id/id_textview_addet_direction"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp" />
    </FrameLayout>
    <!--
    </androidx.cardview.widget.CardView>
    -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/text_Treval_Name_Select_Tourist"
        android:textSize="18sp" />

    <!-- <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_margin="10dp">
         -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="5dp">

        <Spinner
            android:id="@+id/id_spener_tourist_treval"
            android:layout_width="200dp"
            android:layout_height="25dp"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_OR" />

        <Button
            android:id="@+id/id_create_button_tourist_text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/newbutton"
            android:text="@string/button_create" />
    </FrameLayout>
    <!--
        </androidx.cardview.widget.CardView>
    -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycler_viev_select_tourist"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></androidx.recyclerview.widget.RecyclerView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/id_cancel_button_create_treval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newbutton"
            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/id_create_treval_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/newbutton"
            android:text="@string/button_save" />
    </FrameLayout>


</LinearLayout>