<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.AddTrevalFragment">

    <EditText
        android:id="@+id/id_edittext_treval_create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorSecondBVeryLight"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_Treval_Name_Select_Direcion" />

            <Spinner
                android:id="@+id/id_spener_direction_treval"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="25dp"
                android:text="@string/text_OR" />

            <Button
               android:drawableLeft="@drawable/ic_direction"
                android:id="@+id/id_create_button_derection_text_view"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:background="@drawable/newbutton"
                android:text="@string/button_create" />

            <TextView
                android:id="@+id/id_textview_addet_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorSecondBVeryLight"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_Treval_Name_Select_Tourist" />

            <Spinner
                android:id="@+id/id_spener_tourist_treval"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="25dp"
                android:text="@string/text_OR" />

            <Button
                android:drawableLeft="@drawable/ic_tourist"
                android:id="@+id/id_create_button_tourist_text_view"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:background="@drawable/newbutton"
                android:text="@string/button_create" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_recycler_viev_select_tourist"
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"></androidx.recyclerview.widget.RecyclerView>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       app:cardBackgroundColor="@color/colorSecondBVeryLight"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_margin="10dp"
       app:cardCornerRadius="5dp"
       android:elevation="2dp">
       <FrameLayout
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <Button
               android:background="@drawable/newbutton"
               android:id="@+id/id_cancel_button_create_treval"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/button_cancel"/>
           <Button
               android:background="@drawable/newbutton"
               android:id="@+id/id_create_treval_button"
               android:layout_gravity="end"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/button_create"/>
       </FrameLayout>
   </androidx.cardview.widget.CardView>

</LinearLayout>