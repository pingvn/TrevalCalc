<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".Fragments.AddTouristFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/Name_Fragment_Add_Tourist"
        android:textSize="18sp" />
    <!--
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorSecondBVeryLight"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_Tourist_Name_Tourist" />

        <EditText
            android:id="@+id/id_createTurist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="20dp" />

    </FrameLayout>
    <!--
     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         app:cardBackgroundColor="@color/colorSecondBVeryLight"
         android:layout_width="match_parent"
         android:layout_height="300dp"
         android:layout_margin="10dp"
         app:cardCornerRadius="5dp">
 -->
    <FrameLayout
       android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_Tourist_Deposite"
            android:textSize="18sp" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/id_createTourist_deposite"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/defaul_values_for_digit_Edit" />
    </FrameLayout>

    <FrameLayout

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_Tourist_Credite"
            android:textSize="18sp" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/id_createTourist_Credite"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/defaul_values_for_digit_Edit" />
    </FrameLayout>

    <!--
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/colorSecondBVeryLight"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/id_createTourist_cencelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newbutton"
            android:text="@string/button_cancel" />

        <Button
            android:id="@+id/id_idcreateTourist_addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/newbutton"
            android:text="@string/button_create" />

    </FrameLayout>
    <!--
        </androidx.cardview.widget.CardView>
    -->
</LinearLayout>